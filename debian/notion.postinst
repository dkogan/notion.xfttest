#!/bin/sh
set -e
. /usr/share/debconf/confmodule

UPSTREAM_VERSION=
DEBIAN_VERSION=

if [ -h /etc/X11/notion/draw.lua ]; then
    rm -f /etc/X11/notion/draw.lua
fi

ln -s look_clean.lua /etc/X11/notion/draw.lua

update-alternatives --install /usr/bin/ion ion /usr/bin/notion 29 \
    --slave /usr/share/man/man1/ion.1.gz ion.1.gz \
    /usr/share/man/man1/notion.1.gz

update-alternatives --install \
    /usr/bin/x-window-manager x-window-manager /usr/bin/notion 49 \
    --slave /usr/share/man/man1/x-window-manager.1.gz x-window-manager.1.gz \
    /usr/share/man/man1/notion.1.gz

# i18n menu method
inst=/etc/menu-methods/notion-i18n
if [ -f $inst ]; then
    chmod a+x $inst
fi

# Initialise extra configuration file list if missing
[ -f /etc/X11/notion/cfg_debian_ext.lua ] || >/etc/X11/notion/cfg_debian_ext.lua

#DEBHELPER#

# Remove the old now-renamed generated Debian menu
rm -f /var/lib/notion/debian-menus.lua
